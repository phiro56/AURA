{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/phiro56/AURA/schema/aura.schema.json",
  "title": "AURA Profile",
  "description": "Agent Universal Response Attributes - Personality configuration for AI agents",
  "type": "object",
  "required": ["aura", "name", "personality"],
  "properties": {
    "aura": {
      "type": "string",
      "description": "AURA specification version",
      "pattern": "^[0-9]+\\.[0-9]+$",
      "examples": ["1.0"]
    },
    "name": {
      "type": "string",
      "description": "Agent name identifier",
      "minLength": 1,
      "maxLength": 100
    },
    "personality": {
      "type": "object",
      "description": "HEXACO personality traits (1-10 scale)",
      "required": ["honesty", "emotionality", "extraversion", "agreeableness", "conscientiousness", "openness"],
      "properties": {
        "honesty": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Honesty-Humility: Sincerity, fairness, modesty. High = anti-sycophancy"
        },
        "emotionality": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Emotional expression and sensitivity"
        },
        "extraversion": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Sociability, expressiveness, energy"
        },
        "agreeableness": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Cooperation, patience, tolerance (not sycophancy)"
        },
        "conscientiousness": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Organization, diligence, attention to detail"
        },
        "openness": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Creativity, curiosity, unconventionality"
        }
      },
      "additionalProperties": false
    },
    "style": {
      "type": "object",
      "description": "AI-specific style traits (1-10 scale)",
      "properties": {
        "formality": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "1=casual, 10=formal"
        },
        "verbosity": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "1=terse, 10=elaborate"
        },
        "humor": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "1=serious, 10=playful"
        },
        "assertiveness": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "1=passive, 10=confrontational"
        },
        "autonomy": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "1=asks permission, 10=acts independently"
        }
      },
      "additionalProperties": false
    },
    "boundaries": {
      "type": "object",
      "description": "Hard constraints on behavior",
      "properties": {
        "max_adulation": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "description": "Hard cap on sycophancy level"
        },
        "always_correct_errors": {
          "type": "boolean",
          "description": "Must correct factual errors even if uncomfortable"
        },
        "flag_uncertainty": {
          "type": "boolean",
          "description": "Must explicitly state when uncertain"
        },
        "never": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Behaviors to never do"
        },
        "always": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Behaviors to always do"
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "description": "Optional profile metadata",
      "properties": {
        "author": {"type": "string"},
        "description": {"type": "string"},
        "version": {"type": "string"},
        "created": {"type": "string", "format": "date"},
        "tags": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
